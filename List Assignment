#include <iostream>
#define cap 5
using namespace std;
class List {
    int size;
    int arr[cap];
public:
    List() {
        size = 0;
    }
    void print();
    int get(int index);
    void set(int index, int val);
    void push_back(int val);
    void push_front(int val);
    void remove(int index);
    int getSize();
    bool isFull();
    bool isEmpty();
    void pop();
    int peek();
    void clear();
    void insert(int index, int val);
};

void List::push_back(int val) {
    if (size >= cap) {
        cout << "List is Full" << endl;
        return;
    }
    cout << val << " is pushed into the List" << endl;
    arr[size++] = val;
}
void List :: push_front(int val){
    if(size >= cap){
        cout << "List is Full" << endl;
        return;
    }
    cout << val << " is pushed at the beginning of the list" << endl;
    for(int i = size - 1 ; i>=0 ; i--) arr[i + 1] = arr[i];
    arr[0] = val;
    ++size;
}
int List::get(int index) {
    if (index < 0 || index >= size) {
        cout << "Index out of range" << endl;
    }
    return arr[index];
}
void List :: set(int index, int val){
    if(index < 0 || index >= size){
        cout << "Wrong index" << endl;
        return;
    }
    int preVal = arr[index];
    arr[index] = val;
    cout << preVal << " is changed to " << arr[index] << endl;
}
void List::remove(int index) {
    if (index < 0 || index >= size) {
        cout << "Wrong Index" << endl;
        return;
    }
    int val = arr[index];
    for (int i = index + 1; i < size; i++) {
        arr[i - 1] = arr[i];
    }
    --size;
    cout << val << " is removed from the List" << endl;
    return;
}
void List::print() {
    for (int i = 0; i < size; ++i) cout << arr[i] << " ";
    cout << endl;
    return;
}
int List::getSize() {
    return size;
}
bool List::isEmpty() {
    return size == 0;
}
bool List::isFull() {
    return size == cap;
}
int List::peek() {
    if (size == 0) {
        cout << "No elements are inserted yet" << endl;
    }
    return arr[size - 1];
}
void List::pop() {
    if (size == 0) {
        cout << "the List is already empty" << endl;
        return;
    }
    cout << arr[--size] << " (last element) is removed from the List" << endl;
    return;
}
void List::clear() {
    size = 0;
    cout << "The List has been cleared" << endl;
    return;
}
void List::insert(int index, int val) {
    if (index < 0 || index >= cap) {
        cout << "can't insert (out of bounds)" << endl;
        return;
    }
    else if (size >= cap) {
        cout << "No Enough space to insert a number" << endl;
        return;
    }
    for (int i = size - 1; i >= index; i--) {
        arr[i + 1] = arr[i];
    }
    ++size;
    arr[index] = val;
    cout << val << " is inserted into the List" << endl;
}
int main() {
    List s;
    cout << s.isEmpty() << endl;
    s.push_back(1);
    s.push_back(2);
    s.push_back(3);
    s.push_back(4);
    s.push_back(5);
    s.pop();
    s.push_front(3);
    s.set(0, -1);
    s.remove(0);
    s.print();
    s.clear();
    cout << s.isEmpty() << endl;
    return 0;
}
